{
    "extends": "standard",
    "env": {
        "browser": true,
        "node": true,
        "commonjs": true,
        "mocha": true,
        "mongo": true,
        "es6": true
    },
    "rules": {
        "space-before-function-paren": 0,
        "semi": 1,
        "quotes": 0,
        "no-unused-vars": 1,
        "comma-dangle": 0,
        "consistent-return": 0,
        "object-curly-newline": 1,
        "no-plusplus": [
            "error",
            {
                "allowForLoopAfterthoughts": true
            }
        ],
        "no-unneeded-ternary": [
            "error",
            {
                "defaultAssignment": true
            }
        ],
        "arrow-parens": 1
    }
}